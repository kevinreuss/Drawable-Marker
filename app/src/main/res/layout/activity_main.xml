<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kev.enhanced_marker_detection_mobile.MainActivity">

    <RelativeLayout
        android:id="@+id/second_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/photo_preview"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
    android:id="@+id/first_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
        android:visibility="visible">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@android:color/darker_gray"
            android:id="@+id/p2"
            android:layout_alignTop="@+id/p1"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@android:color/darker_gray"
            android:id="@+id/p5"
            android:layout_alignTop="@+id/p4"
            android:layout_alignStart="@+id/p2" />

        <Button
            android:text="TAKE PHOTO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/take_photo"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@android:color/darker_gray"
            android:id="@+id/p8"
            android:layout_below="@+id/p5"
            android:layout_alignStart="@+id/p5" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@android:color/darker_gray"
            android:id="@+id/p7"
            android:layout_below="@+id/p5"
            android:layout_toStartOf="@+id/p8" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@android:color/darker_gray"
            android:id="@+id/p4"
            android:layout_below="@+id/p2"
            android:layout_alignStart="@+id/p7" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@android:color/darker_gray"
            android:id="@+id/p1"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/p4" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@android:color/darker_gray"
            android:id="@+id/p9"
            android:layout_below="@+id/p5"
            android:layout_toEndOf="@+id/p8" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@android:color/darker_gray"
            android:id="@+id/p6"
            android:layout_above="@+id/p9"
            android:layout_toEndOf="@+id/p2" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@android:color/darker_gray"
            android:id="@+id/p3"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/p2" />

    </RelativeLayout>

</RelativeLayout>
